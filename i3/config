set $color-unfocused-background   #000000
set $color-unfocused-text         #FFFFFF
set $color-unfocused-indicator    #404060
set $color-unfocused-child_border #404060


###################
# Window Settings #
###################
for_window [class="^.*"] border pixel 4 
for_window [class="albert"] border pixel 0


# Set window colors
#<colorclass>           <border>                <background>                <text>                  <indicator>                 <child_border>
client.focused          $color-focused-border   $color-focused-background   $color-focused-text     $color-focused-indicator    $color-focused-child_border
client.unfocused        $color-unfocused-border $color-unfocused-background $color-unfocused-text   $color-unfocused-indicator  $color-unfocused-child_border 


gaps inner 15 
smart_gaps on
